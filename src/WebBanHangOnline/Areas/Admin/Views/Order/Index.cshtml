@model PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách đơn hàng";
}
<!-- Main content -->
<div class="content-page">
    <div class="container-fluid">
        <!-- Page start  -->
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Danh sách đơn hàng</h4>
                    </div>
                </div>
            </div>
            <!-- Danh sách danh mục dạng bảng -->
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                    <table class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Tên Khách hàng</th>
                                <th>Liên lạc</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @if (Model != null && Model.Any())
                            {
                                var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Code</td>
                                        <td>@item.CustomerName</td>
                                        <td>@item.Phone</td>
                                        <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)</td>
                                        <td>@(item.TypePayment==1?"Chờ thành toán":"Đã thanh toán")</td>
                                        <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="View"
                                               href="/Admin/Order/View/@item.Id"><i class="ri-eye-line mr-0"></i></a>
                                            <a class="badge bg-success btnCapNhat" data-toggle="tooltip" data-id="@item.Id" data-placement="top" title="" data-original-title="Edit"
                                               href="#"><i class="ri-pencil-line mr-0"></i></a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Page end  -->
    </div>
    <!-- Modal Edit -->
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Cập nhật trạng thái</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="txtOrderId" value="0" />
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select class="form-control" id="ddTrangThai">
                            <option value="2">
                                Đã thanh toán
                            </option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btnLuu">Lưu</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            });

            $('body').on('click', '#btnLuu', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddTrangThai').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: tt },
                    success: function (res) {
                        if (res.Success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}