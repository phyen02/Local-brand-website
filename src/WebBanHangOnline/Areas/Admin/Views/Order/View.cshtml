@model WebBanHangOnline.Models.EF.Order
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}
<div class="content-page">
    <div class="container-fluid">
        <!-- Page start  -->
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Chi tiết đơn hàng</h4>
                    </div>
                </div>
            </div>
            <!-- Chi tiết đơn hàng -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mã đơn hàng</label>
                            <p class="form-control">@Model.Code</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên khách</label>
                            <p class="form-control">@Model.CustomerName</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tổng tiền</label>
                            <p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.TotalAmount, 0) đ</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <p class="form-control">@Model.Phone</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ngày tạo</label>
                            <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <p class="form-control">@Model.Email</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <p class="form-control">@(Model.TypePayment == 1 ? "Chua thanh toán" : "Đã thanh toán")</p>
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h2>Danh sách sản phẩm</h2>
                    </div>
                    <div class="col-12">
                        @Html.Action("Partial_SanPham", "Order", new { id = Model.Id })
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- Page end  -->
</div>