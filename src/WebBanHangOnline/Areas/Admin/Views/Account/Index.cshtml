@model IEnumerable<WebBanHangOnline.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<!-- Main content -->
<div class="content-page">
    <div class="container-fluid">
        <!-- Page start  -->
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Danh sách tài khoản</h4>
                    </div>
                    <div class="d-flex align-items-center list-action">
                        <a href="/Admin/Account/Create" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Thêm mới</a>
                    </div>
                </div>
            </div>
            <!-- Danh sách danh mục dạng bảng -->
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                    <table class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>STT</th>
                                <th>Tài khoản</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @if (Model != null && Model.Any())
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.UserName</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <div class="d-flex align-items-center list-action">
                                                <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"
                                                   href="/Admin/Account/Edit/@item.UserName"><i class="ri-pencil-line mr-0"></i></a>
                                                <a class="badge bg-warning mr-2 btnDelete" data-id="@item.Id" data-placement="top" title="" data-original-title="Delete"
                                                   a href="#" data-user="@item.UserName"><i class="ri-delete-bin-line mr-0"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">Không có danh mục nào</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Page end  -->
    </div>
</div>